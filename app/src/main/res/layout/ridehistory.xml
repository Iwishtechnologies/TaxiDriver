<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E2E2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ridehistorybackground"
        android:orientation="vertical">

          <com.iwish.taxidriver.extended.TexiFonts
              android:layout_width="match_parent"
              android:textAlignment="textStart"
              android:layout_marginLeft="20dp"
              android:textSize="15dp"
              android:id="@+id/date"
              android:layout_marginTop="10dp"
              android:textColor="#000"
              android:layout_height="wrap_content"
              android:text="17/12/2020    12:25 PM"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="2">

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_weight="1.5"/>

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birla nager "
                android:textSize="15dp"
                android:id="@+id/pickup"
                android:textColor="#000"
                android:layout_weight="0.5"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:weightSum="2">

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_weight="1.5"/>

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birla nager "
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:id="@+id/drop"
                android:textColor="#000"
                android:layout_weight="0.5"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount  500"
                android:id="@+id/amt"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_weight="1"/>

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance 3 KM"
                android:textSize="15dp"
                android:id="@+id/dis"
                android:textColor="#000"
                android:layout_weight="1"/>



        </LinearLayout>








    </LinearLayout>


</RelativeLayout>