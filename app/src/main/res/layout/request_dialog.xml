<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/backcopy"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="90dp"
        android:gravity="center_vertical"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-100dp"

        android:orientation="vertical">

        <com.iwish.taxidriver.extended.TexiFonts
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have  New Booking"
            android:textAlignment="textStart"
            android:textSize="22dp"
            android:id="@+id/booking"
            app:fonttype="bold"
            android:textColor="#000"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/street"
            android:layout_below="@id/booking"
            android:orientation="horizontal">
        <com.iwish.taxidriver.extended.TexiFonts
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:fonttype="bold"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Address :" />

        <com.iwish.taxidriver.extended.TexiFonts
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:fonttype="bold"
            android:textAlignment="textStart"
            android:id="@+id/address"
            android:textColor="#000"
            android:text=""
            android:textSize="15dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_marginLeft="20dp"
            android:id="@+id/city"
            android:visibility="gone"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:fonttype="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="City :   " />

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:fonttype="bold"
                android:id="@+id/cityname"
                android:textColor="#000"
                android:textSize="15dp"
                android:text=""
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_marginLeft="20dp"
            android:id="@+id/distance"

            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:fonttype="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="BookingType :   " />

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:fonttype="bold"
                android:id="@+id/bookingtype"
                android:textColor="#000"
                android:textSize="15dp"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_marginLeft="20dp"
            android:id="@+id/time"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:fonttype="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Time :   " />

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:fonttype="bold"
                android:id="@+id/triptime"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="30 MIN"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_marginLeft="20dp"
            android:id="@+id/price"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:fonttype="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Trip Cost  :   " />

            <com.iwish.taxidriver.extended.TexiFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:fonttype="bold"
                android:id="@+id/cost"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="â‚¹ 500"
                />
        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginRight="35dp"
            android:orientation="horizontal">


            <com.iwish.taxidriver.extended.ButtonFonts
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="ACCEPT"
                android:id="@+id/confirm"
                android:textSize="15dp"

                android:textColor="@color/Login_button_white"
                android:background="@drawable/requst_background_button"/>
        </LinearLayout>







    </LinearLayout>



</LinearLayout>